<%- include('../common/view_start', {
  title: 'Studying Analysis',
  cssFiles: ['student-info'],
  navBarLocation: 'student-info'
}) %>

<%- include('../common/header', {
  heading: 'Studying Analysis',
  subheading: 'วิเคราะห์การเรียน',
  breadcrumb: [
    { text: 'Student Info', href: '/student-info' },
    { text: sid, href: '/student-info/' + sid },
    'Studying Analysis'
  ]
}) %>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%- include('student_tab', { info: 'studying-analysis' }) %>
      <div class="row">
        <div class="col-xs-12">
          <h3>วิชาบังคับที่ยังเรียนไม่ผ่าน</h3>
          <% if (strugglingCourseDetail.length === 0) { %>
          <p>ไม่มี</p>
          <% } else { %>
          <table class="table table-condensed table-hover table-striped">
            <thead>
              <tr>
                <th>Course No.</th>
                <th>Course Title</th>
                <th>Credit</th>
                <th>Grade</th>
              </tr>
            </thead>
            <tbody>
              <% for (const course of strugglingCourseDetail) { %>
              <tr class="danger">
                <td><%= course.course_no %></td>
                <td><%= course.course_name %></td>
                <td><%= course.credit %></td>
                <td><%= course.grade %></td>
              </tr>
              <% } %>
            </tbody>
          </table>
          <% } %>

          <hr>

          <h3>วิชาที่เรียนผ่านแล้ว</h3>
          <% if (passedCourseDetail.length === 0) { %>
          <p>ไม่มี</p>
          <% } else { %>
          <table class="table table-condensed table-hover table-striped">
            <thead>
              <tr>
                <th>Course No.</th>
                <th>Course Title</th>
                <th>Credit</th>
                <th>Grade</th>
              </tr>
            </thead>
            <tbody>
              <% for (const course of passedCourseDetail) { %>
              <tr>
                <td><%= course.course_no %></td>
                <td><%= course.course_name %></td>
                <td><%= course.credit %></td>
                <td><%= course.grade %></td>
              </tr>
              <% } %>
            </tbody>
          </table>
          <% } %>

          <hr>

          <h3>วิชาบังคับที่ยังไม่เคยเรียน</h3>
          <% if (remainedCourseDetail.length === 0) { %>
          <p>ไม่มี</p>
          <% } else { %>
          <table class="table table-condensed table-hover table-striped">
            <thead>
              <tr>
                <th>Course No.</th>
                <th>Course Title</th>
                <th>Credit</th>
                <th>Grade</th>
              </tr>
            </thead>
            <tbody>
              <% for (const course of remainedCourseDetail) { %>
              <tr>
                <td><%= course.courseNo %></td>
                <td><%= course.courseName %></td>
                <td><%= course.credit %></td>
                <td><%= course.grade %></td>
              </tr>
              <% } %>
            </tbody>
          </table>
          <% } %>

        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../common/view_end', {
  jsFiles: ['']
}) %>
