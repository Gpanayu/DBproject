<%- include('common/view_start', {
  title: 'About',
  cssFiles: [],
  externalCSSURLs: ['https://cdn.datatables.net/1.10.13/css/dataTables.bootstrap.min.css'],
  navBarLocation: 'about'
}) %>

<%- include('common/header', {
  heading: 'Activity',
  subheading: 'กิจกรรม'
}) %>

<div class="container">
  <div class="row">
    <% if (searched) { %>
      <%- include('search_student') %> 
    <% } %>
    <div class="col-xs-12 col-md-8">
      <div class="row">
        <%- include('info_tab', { info: 'indiv-activity' }) %>
        <div class="col-md-12">
          <h4>Student Activity Bar Chart</h2>
          <canvas id="chart" width="400" height="200"></canvas>
        </div>
      </div>
    </div>

  </div>
</div>


<div class="container col-md-offset-1.5">
<% if (searched) { %>  
  <h3>Search Result</h3>
  <% if (total === 0) { %>
    <p>There is no results.</p>
  <% } else { %>
    <table class="table">
      <caption>Activities Attended By Student ID: <%= sid %></caption>
      <thead>
        <tr>
          <th>#</th>
          <th>Activity ID</th>
          <th>Activity Name</th>
          <th>Start Date</th>
          <th>Award</th>
          <th>Duration (hour)</th>
        </tr>
      </thead>
      <tbody>
        <% let totalDuration = 0 %>
        <% for (let i = 0; i < data.length; i++) { %>
        <tr>
          <th scope="row"><%= i + 1 %></th>
          <td><%= data[i].aid %></td>
          <td><%= data[i].name %></td>
          <td><%= moment(data[i].start_date).format('DD/MM/YYYY') %></td>
          <td><%= data[i].award %></td>
          <td><%= data[i].duration %></td>
          <% totalDuration += data[i].duration %>
        </tr>
        <% } %>
        <td></td><td></td><td></td><td></td><td></td>
        <td>Total: <%= totalDuration %></td>
      </tbody>
    </table>
    <p>Total: <%= total %> Activit<%= total > 1 ? 'ies' : 'y' %>.</p>
  <% } %>
<% } %>

<%- include('common/view_end', {
  jsFiles: ['indiv-activity'],
  externalJSURLs: [
    'https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js',
    'https://cdn.datatables.net/1.10.13/js/dataTables.bootstrap.min.js'
  ]
}) %>
